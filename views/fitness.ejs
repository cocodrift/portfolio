body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    color: #333;
    margin: 0;
    padding: 0;
    text-align: justify;
}

/* Responsive Styles */
@media screen and (max-width: 500px) {
    .card {
        width: 100%;
    }
    header {
        padding: 10px;
    }
    .profile h1 {
